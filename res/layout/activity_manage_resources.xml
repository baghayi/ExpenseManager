<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="5dp"
        android:text="@string/lang_increase_balance_label"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/add_new_balance_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="37dp"
        android:layout_toRightOf="@+id/add_new_balance_button"
        android:ems="10"
        android:hint="@string/lang_default_balance_zero"
        android:inputType="number"
        android:paddingRight="5dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_new_balance_button"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/add_new_balance_field"
        android:paddingLeft="6dp"
        android:paddingTop="9dp"
        android:text="@string/lang_currency_type_rial"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/add_new_balance_field"
        android:text="@string/lang_currency_type_rial"
        android:paddingLeft="6dp"
        android:paddingTop="9dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/subtract_current_balance_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:ems="10"
        android:hint="@string/lang_default_balance_zero"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/subtract_current_balance_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/subtract_current_balance_field"
        android:text="@string/lang_decrease_button_label" />

    <Button
        android:id="@+id/add_new_balance_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/add_new_balance_field"
        android:text="@string/lang_increase_button_label" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/subtract_current_balance_field"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="19dp"
        android:text="@string/lang_decrease_balance_label"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/realtime_new_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_new_balance_field"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dp"
        android:text="@string/lang_default_balance_zero"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/realtime_subtraction_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="@string/lang_default_balance_zero"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
