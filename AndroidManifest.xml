<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.adeveloper.expensemanager"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="18"
         />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.adeveloper.expensemanager.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.adeveloper.expensemanager.ManageResourcesActivity"
            android:label="@string/lang_manage_resources" >
        </activity>
        <activity
            android:name="org.adeveloper.expensemanager.ExpensesListActivity"
            android:label="@string/expenses_list_title" >
        </activity>
        <activity
            android:name="org.adeveloper.expensemanager.ExpenseDetailActivity"
            android:label="@string/title_activity_expense_detail" >
        </activity>
        <activity
            android:name="org.adeveloper.expensemanager.BackupActivity"
            android:label="@string/backup" >
        </activity>
    </application>

</manifest>
